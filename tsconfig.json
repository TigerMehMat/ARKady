{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDirs": ["src"]
  },
  "include": [
    "src/**/*"
  ],
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
